<!--product.wxml-->
<!-- banner -->
<view class="page">
  <custom-navigation-bar id="customNavigationBar" bar-style="3" showBackButton='{{true}}'>
    <view style="width: 100%;height: 100%; color:black" class="flex-col-center">test
    </view>
  </custom-navigation-bar>
  <view>
  </view>
  <view class="navigation">
  </view>
</view>
<!-- banner end -->
<view class="container" bind:tap="hideModal">
  <image class="img-with-margin" mode="aspectFill" class="img" src="{{imgUrl}}"></image>
  <view class="tag-group">
    <view class="tag">aigc写作</view>
    <view class="tag">aigc工具</view>
  </view>

  <view class="product_content">
    <view class="product_title">
      {{name}}
    </view>
    <view class="product_desc">
      {{desc}}
    </view>
    <view>
      <view class="qrcode" catchtap="toggleCanvas">
        手机查看
      </view>
      <view class="canvas-wrapper"  hidden="{{!isQrcodeShown}}">
        <canvas class='canvas' style="width:{{qrcodeWidth}}px; height:{{qrcodeWidth}}px;" canvas-id='canvas' bindlongtap='save'></canvas>
      </view>
    </view>
  </view>
</view>
