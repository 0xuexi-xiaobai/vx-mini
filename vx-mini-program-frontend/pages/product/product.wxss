.modal {
  display: none;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  visibility: hidden; /* 模态框默认不可见 */
  opacity: 0;
  transition: visibility 0s, opacity 0.3s linear;
}

.modal-show {
  visibility: visible; /* 模态框可见 */
  opacity: 1;
  display: none;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  opacity: 0;
  transition: visibility 0s, opacity 0.3s linear;
}
.canvas-wrapper {
  padding: 10rpx;
  border: 4px solid black;
}
.canvas {
  position: relative;
}

.canvas::before {
  content: "";
  position: absolute;
  top: -16px;
  left: calc(50% - 10px);
  width: 0;
  height: 0;
  border-left: 10px solid transparent;
  border-right: 10px solid transparent;
  border-bottom: 10px solid black;
}