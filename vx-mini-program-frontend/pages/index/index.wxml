<scroll-view scroll-y="true" class="container" bindscrolltoupper="upper" upper-threshold="10" lower-threshold="5" bindscrolltolower="lower" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">

<view style="text-align: center;">
  <view style="border-radius: 20rpx; background-color: #444444; color: #ffffff; font-size: 50rpx;">{{banner}}</view>
  <view style="display: flex; font-size: 40rpx;color: #ffffff; padding: 10rpx 0rpx 10rpx 0rpx;">
    <view style="flex: 1; background-color: #444444; margin-right:5rpx; border-radius: 12rpx">{{recommendation}}</view>
    <view style="flex: 1; background-color: #444444; border-radius: 12rpx" bindtap="bindPromptTap">{{prompt}}</view>
  </view>
</view>

<view style="display: flex; justify-content: center;">
  <swiper class="activity" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}">
    <block wx:for="{{coverList}}" wx:key="id">
      <swiper-item bindtap="bindItemTap">
        <view class="slide-item">
          <image src="{{item.url}}" class="slide-image" mode="aspectFill" />
          <view class="slide-text">
            <view class="slide-title">{{ item.title }}</view>
            <view class="slide-desc">{{ item.desc }}</view>
          </view>
        </view>
      </swiper-item>
    </block>
  </swiper>
</view>

<block wx:for="{{productList}}" wx:key="id">
  <fui-list bottomBorder size="32" title="{{item.title}}" cc="{{item.showAll ? 'ᐯ' : 'ᐳ'}}" bindtap="toggleShowAll" data-index="{{index}}">
    <block wx:for="{{item.displayCells}}" wx:key="id">
      <fui-list-cell highlight="true" arrow="true" catchtap="bindItemTap">
        <view style="display: flex; flex-direction: row;">
          <image src="{{item.url}}" style="width: 60rpx; height: 60rpx;" />
          <view style="display: flex; flex-direction: column; margin-left: 10rpx; justify-content: center;">
            <text style="font-size: 25rpx;">{{item.productTitle}}</text>
            <text style="font-size: 20rpx; color: #666666;">{{item.productDesc}}</text>
          </view>
        </view>
      </fui-list-cell>
    </block>
  </fui-list>
</block>
</scroll-view>
