/**index.wxss**/

.container {
  padding: 10rpx 10rpx 10rpx 10rpx;
  font-size: 14rpx;
  background: #F0F4F3;
  color: #000;
}

.container .search {
  width: 735rpx;
  height: 65rpx;
  padding: 12.5rpx 12.5rpx 12.5rpx 12.5rpx;
  background: #2A8CE5;
}

.container .search-left {
  flex: 8;
  background: #4EA3E7;
  text-align: left;
}

.container .search-left input {
  display: inline-block;
  height: 65rpx;
  font-size: 26rpx;
}

.search-placeholder {
  color: #8CCEFD;
  line-height: 20rpx;
}

.container .search .search-left image {
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 15rpx;
}

.container .search .search-right {
  flex: 1;
}

.container .search .search-right image {
  width: 45rpx;
  height: 45rpx;
  padding: 10rpx;
}



/**index.wxss**/

.activity {
  width: 730rpx;
  height: 375rpx;
}

.outer-view {
  /* border: 2rpx solid black; */
  text-align: center;

}

.inner-view {
  font-size: 32rpx;
  text-align: center;
  background-color: #f0f0f0;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  padding: 5rpx;
  border: 2rpx solid #999;
  border-radius: 10rpx;
  margin-left: 150rpx;
  margin-right: 150rpx;
  border-radius: 10rpx;
}

.slide-item {
  position: relative;
  width: 100%;
  height: 100%;
  /* 适合您的图片尺寸 */
}

.slide-image {
  width: 100%;
  height: 100%;
}

.slide-text {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.5);
  /* 设置文本背景颜色及透明度 */
  color: #ffffff;
  padding: 10px;
  /* 调整文字的内边距 */
}

.slide-title {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 5px;
}

.slide-desc {
  font-size: 16px;
}

/*feed-item part is in app.wxss for multiplexing*/