<view class="vertical-stack">
  <!-- banner -->
  <view class="page">
    <custom-navigation-bar id="customNavigationBar" bar-style="3" showBackButton='{{true}}'>
      <view style="width: 100%;height: 100%; color:black" class="flex-col-center">test
      </view>
    </custom-navigation-bar>
    <view>
    </view>
    <view class="navigation">
    </view>
  </view>
  <!-- pages/prompt/prompt.wxml -->

  <view style="display: flex; justify-content: center; margin-bottom: 40rpx;" class="child-element">
    <view class="swiper-container">
      <swiper class="activity" indicator-dots="{{true}}" autoplay="{{false}}" interval="{{5000}}" duration="{{1000}}" circular="{{true}}">
        <block wx:for="{{coverList}}" wx:key="id">
          <swiper-item bindtap="bindItemTap">
            <view class="slide-item">
              <image src="{{item.url}}" class="slide-image" mode="aspectFit" />
            </view>
          </swiper-item>
        </block>
      </swiper>
    </view>
  </view>


  <view class="container1">
    <view class="card" bindtap="copywxtap" style="margin-bottom: 10rpx; margin-top: 10rpx;">
      <view class="card-header" style="background-color:#666 ;">
        <view class="card-title">prompt</view>
        <view class="card-tag">点击复制</view>
      </view>
      <view class="card-content" style="color: #f7f7f7; padding: 8px;">
        {{prompt_content}}
      </view>
    </view>
  </view>
</view>